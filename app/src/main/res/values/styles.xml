<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo TextInputLayout cuando ocurre error -->
    <style name="TextInputLayout.OutlinedBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeErrorColor">@color/errorColor</item>
        <item name="boxStrokeColor">@color/secondaryColor</item>
        <item name="errorIconTint">@color/errorColor</item>
        <item name="errorTextColor">@color/errorColor</item>
        <item name="errorIconDrawable">@null</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="hintTextColor">@color/secondaryColor</item>
    </style>

    <style name="TextViewSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/questrial</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

</resources>